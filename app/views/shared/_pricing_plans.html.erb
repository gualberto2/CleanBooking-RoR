<% plans.each do |plan| %>
  <div class="relative rounded-2xl p-8 transition-all duration-300 hover:scale-105 <%= plan[:highlighted] ? 'bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-500 shadow-xl' : 'bg-white border-2 border-gray-100 hover:border-blue-200 shadow-lg' %>">
    <% if plan[:highlighted] %>
      <div class="absolute px-4 py-1 text-sm font-medium text-white -translate-x-1/2 bg-blue-700 rounded-full -top-4 left-1/2">
        Most Popular
      </div>
    <% end %>

    <div class="flex items-center justify-between mb-6">
      <div>
        <h3 class="mb-2 text-xl font-bold text-blue-900"><%= plan[:name] %></h3>
        <p class="text-sm text-gray-600"><%= plan[:description] %></p>
      </div>
      <%= lucide_icon(plan[:icon], class: "w-8 h-8 #{plan[:highlighted] ? 'text-blue-700' : 'text-gray-400'}") %>
    </div>

    <div class="mb-6">
      <div class="flex items-baseline">
        <span class="text-4xl font-bold text-blue-900">$<%= plan[:price] %></span>
        <span class="ml-2 text-gray-600"><%= plan[:period] %></span>
      </div>
    </div>

    <div class="mb-8 space-y-4">
      <% plan[:features].each do |feature| %>
        <div class="flex items-center">
          <%= lucide_icon('check', class: 'w-5 h-5 text-green-500 mr-3 flex-shrink-0') %>
          <span class="text-gray-600"><%= feature %></span>
        </div>
      <% end %>
    </div>

    <div class="mb-8 space-y-2 text-sm text-gray-600">
      <div>Service Limit: <%= plan[:limits][:services] %></div>
      <div>Project Limit: <%= plan[:limits][:projects] %></div>
      <div>Team Member Limit: <%= plan[:limits][:team_members] %></div>
    </div>

    <button class="w-full py-3 rounded-lg font-medium transition-colors <%= plan[:highlighted] ? 'bg-blue-700 text-white hover:bg-blue-800' : 'bg-gray-100 text-blue-900 hover:bg-gray-200' %>">
      Get Started
    </button>
  </div>
<% end %>
