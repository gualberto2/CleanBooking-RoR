<section class="relative w-full px-8 py-20 overflow-hidden md:px-16 lg:px-24 bg-gray-50">
  <%# <%= render 'testimonials_floating_icons' %> 

  <!-- Heading -->
  <div class="relative mb-16 text-center">
    <div class="mb-4 font-medium text-blue-700">Latest Articles</div>
    <h2 class="mb-4 text-3xl font-bold text-blue-900">
      Stay Updated with Our Blog
    </h2>
    <p class="max-w-2xl mx-auto text-gray-600">
      Discover the latest insights, tips, and trends in the cleaning industry
    </p>
  </div>

  <!-- Carousel -->
  <div class="relative mx-auto max-w-7xl" data-controller="scroll">
    <div
      data-scroll-target="container"
      class="flex gap-6 pb-8 overflow-x-auto scroll-smooth hide-scrollbar"
    >
      <% @articles.each do |article| %>
        <div
          class="flex-shrink-0 w-[300px] md:w-[350px] bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
        >
          <%= image_tag article[:image], alt: article[:title], class: "w-full h-48 object-cover" %>

          <div class="p-6">
            <div class="mb-2 text-sm text-blue-700"><%= article[:date] %></div>

            <h3 class="mb-3 text-xl font-semibold text-blue-900 line-clamp-2">
              <%= article[:title] %>
            </h3>

            <p class="mb-4 text-gray-600 line-clamp-2">
              <%= article[:description] %>
            </p>

            <%= link_to '#', class: 'inline-flex items-center text-blue-700 hover:text-blue-800 font-medium' do %>
              Read&nbsp;More
              <%= lucide_icon 'arrow-right', class: 'w-4 h-4 ml-2' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Nav buttons -->
    <button
      data-action="click->scroll#left"
      class="absolute left-0 z-10 p-2 -translate-x-4 -translate-y-1/2 bg-white rounded-full shadow-lg top-1/2 hover:bg-gray-50"
    >
      <%= lucide_icon 'arrow-left', class: 'w-6 h-6 text-blue-900' %>
    </button>

    <button
      data-action="click->scroll#right"
      class="absolute right-0 z-10 p-2 translate-x-4 -translate-y-1/2 bg-white rounded-full shadow-lg top-1/2 hover:bg-gray-50"
    >
      <%= lucide_icon 'arrow-right', class: 'w-6 h-6 text-blue-900' %>
    </button>
  </div>
</section>
